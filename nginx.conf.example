# Nginx configuration for Next.js App
# Place this in /etc/nginx/sites-available/zed-booking-app
# Then: sudo ln -s /etc/nginx/sites-available/zed-booking-app /etc/nginx/sites-enabled/
# Test: sudo nginx -t
# Reload: sudo systemctl reload nginx

server {
    listen 80;
    server_name app.zedcapitalbooking.com;
    
    # Redirect to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name app.zedcapitalbooking.com;

    # SSL certificates (update paths)
    ssl_certificate /etc/letsencrypt/live/app.zedcapitalbooking.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/app.zedcapitalbooking.com/privkey.pem;
    
    # SSL settings
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;
    ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384;

    # Root directory
    root /var/www/zed-capital-booking-app;

    # Max upload size
    client_max_body_size 50M;

    # Proxy to Next.js app
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Critical: Allow _next static files (do NOT block these)
    location /_next/static/ {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        
        # Cache static assets
        add_header Cache-Control "public, max-age=31536000, immutable";
        
        # Allow all methods
        add_header Access-Control-Allow-Origin *;
    }

    # Next.js image optimization
    location /_next/image {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
    }

    # Favicon
    location = /favicon.ico {
        proxy_pass http://localhost:3000;
        access_log off;
    }

    # Logs
    access_log /var/log/nginx/zed-booking-app-access.log;
    error_log /var/log/nginx/zed-booking-app-error.log;
}
